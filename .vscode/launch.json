    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'raft run ../1-test/TestRaftComPorts'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raft",
                    "--package=raftcli"
                ],
                "filter": {
                    "name": "raft",
                    "kind": "bin"
                }
            },
            "args": [
                "run",
                "../1-test/TestRaftComPorts"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'raft monitor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=raft",
                    "--package=raftcli"
                ],
                "filter": {
                    "name": "raft",
                    "kind": "bin"
                }
            },
            "args": [
                "monitor",
                "-p",
                "COM14"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'raft'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=raft",
                    "--package=raftcli"
                ],
                "filter": {
                    "name": "raft",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}